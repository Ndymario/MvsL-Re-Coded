{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(WIN) build release",
            "type": "shell",
            "command": "c:/raylib/mingw/bin/mingw32-make.exe",
            "args": [
                "PROJECT_NAME=game"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "(WIN) build debug",
            "type": "shell",
            "command": "c:/raylib/mingw/bin/mingw32-make.exe",
            "args": [
                "PROJECT_NAME=game",
                "DEBUGGING=TRUE"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
